---
import '../styles/global.css'

import { ClientRouter } from 'astro:transitions'

import { sanity } from '../lib/sanity'
import { siteSettingsQuery } from '../lib/sanityQueries'
import { getThemePreset } from '../lib/themes'

const settings = sanity ? await sanity.fetch<any>(siteSettingsQuery) : null
const themePreset = getThemePreset(settings?.themePreset)

const { title } = Astro.props as { title?: string }

const rootStyle = [
  `--site-bg:${themePreset.bg}`,
  `--site-fg:${themePreset.fg}`,
  `--site-surface:${themePreset.surface}`,
  `--site-border:${themePreset.border}`,
  `--site-muted:${themePreset.muted}`,
  `--site-accent:${themePreset.accent}`,
  `--site-accent-hover:${themePreset.accentHover}`,
  `--site-highlight:${themePreset.highlight}`,
].join(';')
---

<!doctype html>
<html lang="en" style={rootStyle}>
  <head>
    <meta charset="utf-8" />
    <ClientRouter />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,600;9..144,700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ? `${title} Â· ` : ''}</title></head
  >
  <body class="min-h-screen bg-background text-foreground">
    <main class="mx-auto max-w-4xl px-6 py-10">
      <slot />
    </main>
  </body>
</html>
