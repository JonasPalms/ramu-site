---
import '../styles/global.css'

import { ClientRouter } from 'astro:transitions'
import SiteHeader from '@/components/layout/SiteHeader.astro'

import { sanity } from '../lib/sanity'
import { siteSettingsQuery } from '../lib/sanityQueries'

const THEME_PRESETS = ['sandGreen', 'inkSand'] as const
const DEFAULT_THEME_PRESET = THEME_PRESETS[0]

const settings = sanity ? await sanity.fetch<any>(siteSettingsQuery) : null
const themePreset =
  typeof settings?.themePreset === 'string' &&
  THEME_PRESETS.includes(settings.themePreset as (typeof THEME_PRESETS)[number])
    ? settings.themePreset
    : DEFAULT_THEME_PRESET

const { title } = Astro.props as { title?: string }
const navigation = Array.isArray(settings?.navigation) ? settings.navigation : []
---

<!doctype html>
<html lang="en" data-theme={themePreset}>
  <head>
    <meta charset="utf-8" />
    <ClientRouter />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,600;9..144,700&family=Inter:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <script is:inline src="/scripts/scroll-state.js"></script>
  </head>
  <body class="min-h-screen bg-background text-foreground">
    <SiteHeader navigation={navigation} />
    <main class="pb-10 pt-[calc(var(--site-nav-height)+2rem)] sm:pt-[calc(var(--site-nav-height)+2.5rem)]">
      <slot />
    </main>
  </body>
</html>
