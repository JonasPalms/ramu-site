---
import { portableTextToHtml } from '../lib/sanityPortableText'

const { value } = Astro.props as { value: unknown }
const html = portableTextToHtml(value)
---

<div class="prose" set:html={html} />

<style>
  :global(.prose p) {
    margin-bottom: 1rem;
  }

  :global(.prose p:last-child) {
    margin-bottom: 0;
  }

  :global(.prose ul),
  :global(.prose ol) {
    padding-left: 1.25rem;
    margin-bottom: 1rem;
  }

  :global(.prose ul) {
    list-style: disc;
  }

  :global(.prose ol) {
    list-style: decimal;
  }

  :global(.prose ul:last-child),
  :global(.prose ol:last-child) {
    margin-bottom: 0;
  }

</style>
