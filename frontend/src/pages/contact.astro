---
import BaseLayout from '@/layouts/BaseLayout.astro'
import RichText from '@/components/RichText.astro'
import Container from '@/components/layout/Container.astro'
import { sanity } from '@/lib/sanity'
import { contactPageQuery } from '@/lib/sanityQueries'

const page = sanity ? await sanity.fetch<any>(contactPageQuery) : null
---

<BaseLayout title={page?.seo?.metaTitle || page?.title || 'Contact'}>
  <Container size="wide" class="space-y-8">
    <header class="space-y-3">
      <h1 class="text-4xl tracking-tight">{page?.title || 'Contact'}</h1>
    </header>
    <section class="max-w-3xl">
      <RichText value={page?.content} />
    </section>
  </Container>
</BaseLayout>
